<h1>Eat Da Burger!</h1>

<div class="container">
  <div class="row">
    <div class="col-6">
      <ul>
        {{#each burgers}}
        {{> burgers/burger-block}}
        {{!-- {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}} --}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      {{!-- <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul> --}}
    </div>
  </div>

</div>

<form class = "create-form">
  <div>
    <label for= "bger">Burger name:</label>
    <input type = "text" id = "bger" name = "burger_name">

  </div>
  <button type = "submit">Add Burger</button>
</form>