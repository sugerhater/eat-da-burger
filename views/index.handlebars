<h1 class = "mr-auto ml-auto px-auto">Eat Da Burger!</h1>

<form class = "create-form mr-auto ml-auto">
  <div>
    <label for= "bger">Burger name:</label>
    <input type = "text" id = "bger" name = "burger_name">

  </div>
  <button type = "submit">Add Burger</button>
</form>

<div class="container">
  <div class="row">
    <div class="col-6">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

</div>

